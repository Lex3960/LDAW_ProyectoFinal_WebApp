<style>
    body {
        background: url(media/england-bg.jpg);
        background-repeat: no-repeat;
        background-size: 100% 100%;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        position: relative;
        color: white;
    }

    i {
      color: white !important;
    }

    .card{
        border-radius: 25px;
    }

    .container {
        margin-top: 10%;
    }

    .material-icons {
        color: white !important;
    }

    .input-field{
       color: #FFF !important;
    }

    .input-field .prefix.active {
      color: #FFF !important;
    }

   .input-field label {
      color: #FFF !important;
    }

    .input-field input[type=text]:focus + label {
      color: #FFF !important;
    }

    .input-field input[type=text], input[type=password] {
         border-bottom: 1px solid #FFF !important;
         box-shadow: 0 1px 0 0 #FFF !important;
    }
</style>

<form id="login" class="container" {{action 'signUp' this on="submit" }}>
  <div class="z-depth-5 black-text"><br>
    <h4 class="center-align white-text">Nuevo Usuario</h4><br>
    <div class="row">
      <div class="input-field col s10 offset-s1">
          <i class="material-icons prefix ">account_circle</i>
          {{input type="text" value=name class="validate"}}
          <label>Nombre</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10 offset-s1">
          <i class="material-icons prefix ">account_circle</i>
          {{input type="text" value=lastname class="validate"}}
          <label>Apellido</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10 offset-s1">
          <i class="material-icons prefix ">account_circle</i>
          {{input type="email" value=email class="validate"}}
          <label>Correo Electrónico</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10 offset-s1">
          <i class="material-icons prefix">vpn_key</i>
          {{input type="password" value=pass class="validate"}}
          <label>Contraseña</label>
      </div>
    </div>
    <div class="row">
      <div class="col s10 offset-s1 center-align" style="color:white">
        {{#link-to 'login' id='cancelar' class="waves-effect waves-light btn red left"}}
          Cancelar
        {{/link-to}}
        {{#link-to 'auth.dashboard' type="submit" class="waves-effect waves-light btn blue darken-1 right" style="width:150px; margin-top: 5px;"}}
          Registro
        {{/link-to}}
      </div>
    </div>
    <br>
  </div>
</form>
