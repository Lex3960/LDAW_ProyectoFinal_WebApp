<div class="row">
  <div class="col s12">
    <ul class="collection with-header">
      <li class="collection-header"><h6>Reservaciones del Alumno</h6></li>
      {{#each reservations as |reservation|}}
        <li class="collection-item avatar">
          <img src="/media/contract.png" alt="" class="circle">
          <span class="title">{{reservation.student.fullName}}</span>
          <p>
            Actividad: {{reservation.activity.lesson.level.name}} - {{reservation.activity.lesson.name}}
            <br>
            Asistencia: {{reservation.attendance}}
            <br>
            Calificación: {{reservation.grade}}
            <br>
            Fecha: {{reservation.class.dateString}}
            <br>
            Evaluador: {{reservation.class.teacher.fullName}}
          </p>
          <!-- <a class="secondary-content btn-floating left red darken-3"><i class="material-icons">delete</i></a> -->
        </li>
      {{else}}
        <li class="collection-item">No se ha agregado ninguna reservación.</li>
      {{/each}}
    </ul>
  </div>
</div>
