<div class="row">
  <div class="col s12">
    <ul class="collection with-header">
      <li class="collection-header">
        <div class="row">
          <h6>Reservaciones</h6>
          {{#link-to 'auth.schedule.classes' record.id class="waves-effect waves-light btn light-blue darken-4 right"}}
            <i class="material-icons right">schedule</i>Administrar
          {{/link-to}}
        </div>
      </li>
      {{#each reservations as |reservation|}}
        <li class="collection-item avatar">
          <img src="/media/contract.png" alt="" class="circle">
          <span class="title">{{reservation.student.fullName}}</span>
          <p>
            Actividad {{reservation.activity.lesson.level.name}} : {{reservation.activity.lesson.name}}
            <br>
            Asistencia: {{reservation.attendance}}
            <br>
            Calificación: {{reservation.grade}}
          </p>
          <!-- <a class="secondary-content btn-floating left blue darken-2"><i class="material-icons">edit</i></a> -->
        </li>
      {{else}}
        <li class="collection-item">No se ha agregado ninguna reservación.</li>
      {{/each}}
    </ul>
  </div>
</div>
