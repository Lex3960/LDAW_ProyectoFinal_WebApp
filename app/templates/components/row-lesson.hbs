<div class="row">
  <div class="col s5 offset-s1">
    <ul class="collection with-header">
      <li class="collection-header"><h6>Tipos de Actividad Permitidos</h6></li>
      {{#each lessonTypes as |lessonType|}}
        <div>
          <li class="collection-item">{{lessonType.activity_type.name}}</li>
        </div>
      {{else}}
        <li class="collection-item">No se registran tipos.</li>
      {{/each}}
    </ul>
  </div>
  <div class="col s5">
    <ul class="collection with-header">
      <li class="collection-header"><h6>Actividades</h6></li>
      {{#each activities as |activity|}}
        <div>
          <li class="collection-item">{{activity.activity_type.name}}</li>
        </div>
      {{else}}
        <li class="collection-item">No se registran actividades.</li>
      {{/each}}
    </ul>
  </div>
</div>
