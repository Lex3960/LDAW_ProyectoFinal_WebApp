<style type="text/css">
  .md-table-header {
    display: none;
  }
  .clearFilters {
    background-color: #c62828;
  }
  .pagination li.active {
    background-color: #01579b;
  }
  .ember-text-field{
    color: black;
  }
  .table-header:hover {
    cursor: pointer;
  }
  .table-header-no-sorting:hover {
    cursor: auto;
  }
  .table-container {
    height: 10em;
  }
  table {
      display: flex;
      flex-flow: column;
      height: 52vh;
      width: 100%;
  }
  table thead {
      flex: 0 0 auto;
      width: calc(100% - 0.9em);
  }
  table tbody {
      /* body takes all the remaining available space */
      flex: 1 1 auto;
      display: block;
      overflow-y: scroll;
      overflow-x: hidden;
  }
  table tbody tr {
      width: 100%;
  }
  table thead, table tbody tr {
      display: table;
      table-layout: fixed;
  }
  ::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
    color: #bdbdbd ;
    opacity: 1; /* Firefox */
  }
  .expand_less::after{
    content: "expand_less";
  }
  .expand_more::after{
    content: "expand_more";
  }
</style>

<nav class="red darken-3">
  <div class="row">
    <div class="col s12">
      <div class="nav-wrapper">
        <div class="col s12">
         {{#link-to 'auth.dashboard' class="breadcrumb"}}My English Academy {{/link-to}}
         {{#link-to 'auth.levels' class="breadcrumb"}} Niveles {{/link-to}}
         {{#link-to 'auth.levels.detail' model.level.id class="breadcrumb"}} {{model.level.name}} {{/link-to}}
       </div>
       </div>
    </div>
  </div>
</nav>

<div class="row">
  <div class="col s10 offset-s1">
    <blockquote> <h4> {{model.level.name}}: <i>Lecciones</i> </h4> </blockquote>
  </div>
</div>

<div class="row">
  <div class="table-div container col s10 offset-s1">
    {{models-table
      data=model.lessons
      columns=columns
      showColumnsDropdown=false
      customMessages=customMessages
      customIcons=customIcons
      filteringIgnoreCase=true
      useNumericPagination=true
      expandedRowTemplate='row-lesson'
      multipleExpand=false
      pageSize=4
      edit='editLesson'
    }}
  </div>
</div>
