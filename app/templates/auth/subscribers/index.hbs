<div class="row">
  <div class="col s10 offset-s1">
    <h4> Subscriptores </h4>
  </div>
</div>

<div class="row">
  <div class="container col s10 offset-s1">
    <table>
        <thead>
          <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Tel√©fono</th>
              <th>Email</th>
              <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |subscriber|}}
            <tr>
              <td>{{input type="text" value=subscriber.name}}</td>
              <td>{{input type="text" value=subscriber.last_name}}</td>
              <td>{{input type="text" value=subscriber.phone}}</td>
              <td>{{input type="text" value=subscriber.mail}}</td>
              <td>
                <a class="btn-floating blue darken-2"><i class="material-icons" {{action 'saveRecord' subscriber}}>save</i></a>
                <a class="btn-floating red darken-2"><i class="material-icons" {{action 'delete' subscriber}}>delete</i></a>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="5">No hay subscriptores registrados.</td>
            </tr>
          {{/each}}

        </tbody>
      </table>
  </div>
</div>
