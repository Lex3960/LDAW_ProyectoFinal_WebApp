<div class="row">
  <div class="col s10 offset-s1">
    <h4> Subscriptores </h4>
  </div>
</div>

<div class="row">
  <div class="container col s10 offset-s1">
    <table>
        <thead>
          <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Tel√©fono</th>
              <th>Email</th>
              <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |subscriber|}}
            {{#unless subscriber.isNew}}
              <tr>
                <td>{{subscriber.name}}</td>
                <td>{{subscriber.last_name}}</td>
                <td>{{subscriber.phone}}</td>
                <td>{{subscriber.mail}}</td>
                <td>
                  {{#link-to 'auth.subscribers.edit' subscriber.id class="btn-floating blue darken-2"}}<i class="material-icons">edit</i>{{/link-to}}
                  <a class="btn-floating red darken-2"><i class="material-icons" {{action 'delete' subscriber}}>delete</i></a>
                </td>
              </tr>
            {{/unless}}
          {{else}}
            <tr>
              <td colspan="5">No hay subscriptores registrados.</td>
            </tr>
          {{/each}}

        </tbody>
      </table>
  </div>
</div>
